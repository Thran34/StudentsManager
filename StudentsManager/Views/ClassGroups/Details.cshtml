@model StudentsManager.Domain.Models.ClassGroup

<h2>@Model.Name</h2>

<h3>Lesson Plans</h3>
@if (Model.LessonPlans.Any())
{
    <ul>
        @foreach (var plan in Model.LessonPlans)
        {
            <li>@plan.Subject - @plan.Description (@plan.DayOfWeek)</li>
        }
    </ul>
}
else
{
    <p>No lesson plans available.</p>
}