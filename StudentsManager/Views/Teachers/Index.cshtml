@model IEnumerable<StudentsManager.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<h1>Teachers</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a button class="btn btn-primary" asp-action="Edit" asp-route-id="@item.TeacherId">Edit</a> |
                <a button class="btn btn-secondary" asp-action="Details" asp-route-id="@item.TeacherId">Details</a> |
                <a button class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TeacherId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>